pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                echo 'Welcome to Kloia Bootcamp!'
            }
        }
        stage('run-parallel-branches') {
            steps {
                parallel(
                    a: {
                        echo "This is paralel stage a"
            },
                    b: {
                        echo "This is paralel stage b"
            }
           
        }
      }
    }
  }
